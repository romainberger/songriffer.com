  "repository": "git@github.com:romainberger/sr.git",
  "author": "Romain Berger <romain@romainberger.com>",
  "scripts": {
    "build": "yarn clean && yarn build-webpack",
    "build-webpack": "NODE_ENV=production webpack --config webpack.config.js",
