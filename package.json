    "firebase": "^6.3.5",
    "mini-css-extract-plugin": "0.8.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "terser-webpack-plugin": "2.1.0",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6"
  },
  "devDependencies": {
    "husky": "3.0.5",
    "jest": "24.9.0",
    "puppeteer": "2.0.0"
